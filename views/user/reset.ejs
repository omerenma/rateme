<% layout('layout') %>


<div class="container">
  <br><br>
  
 <br><br>


 <div class="text-center reg_msg">
      <h2 class="fancy"><span>Password Reset</span></h2>
 </div><br>

  <div class="row signup">

      <% if(hasErrors) {%>
        <% for(var i = 0; i < messages.length; i++) {%>
            <div class="alert alert-danger">
               <a href="#" class="close" data-dismiss="alert" aria-label="close">
                   &times;
               </a>
               <%= messages[i] %>
                
            </div>
        <% } %>
    <% } %>
    
    <% if(noErrors) {%>
        <div class="alert alert-success">
           <a href="#" class="close" data-dismiss="alert" aria-label="close">
               &times;
           </a>
           <%= success %>

        </div>
    <% } %>
      <form method="POST" action="/reset">


          <div class="form-group input_group">
              <input id="email" class="form-control" name="password" type="password" autocomplete="on" placeholder="PASSWORD" style="margin-bottom:20px;">
          </div>

          <div class="form-group input_group">
              <input id="password" class="form-control" name="confirmPassword" type="password" placeholder="CONFIRM PASSWORD" style="margin-bottom:20px;">
          </div>


          <div class="form-group">
              <input type="submit" id="login" value="reset" class="form-control btn btn-primary" name="reset" >
          </div>

        </form>
        <div>
          <h4>Already reset your password? <a href="/login">Login</a></h4>
        </div>


  </div>
</div>